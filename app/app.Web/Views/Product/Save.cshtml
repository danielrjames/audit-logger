@model ProductSaveVM
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Product" : "Edit Product";
}

<div class="row">
    <div class="col-sm">
        @if (Model.Id == 0)
        {
            <h2>Create Product</h2>
        }
        else
        {
            <h2>Edit Product</h2>
        }

    </div>
</div>
@if (Model.Error)
{
    <div class="row">
        <div class="col-sm">
            <div class="alert alert-danger" role="alert">
                Your form has errors!
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-sm">
        <form method="post">
            <input type="hidden" id="productId" asp-for="Id" />
            <input type="hidden" id="returnUrl" asp-for="ReturnUrl" />
            <div class="form-group">
                <label for="productName">Name</label>
                <input type="text" class="form-control" id="productName" asp-for="Name" />
            </div>
            <div class="form-group">
                <label for="productColor">Color</label>

                <select class="custom-select" asp-for="Color"
                        asp-items="@(new SelectList(Model.ColorList,"Id","Name"))">
                </select>



                @*<input type="text" class="form-control" id="productColor" asp-for="Color" />*@
            </div>
            <div class="form-group">
                <label for="productPrice">Price</label>
                <input type="number" min="0.00" max="10000.00" step="0.01" class="form-control" id="productPrice" asp-for="Price" />
            </div>
            <div>
                <button class="btn btn-primary float-right" style="margin-left:15px;" type="submit">Save</button>
                <a class="btn btn-outline-primary float-right" href="@Model.ReturnUrl">Back</a>
            </div>
        </form>
    </div>
    <div class="col-sm"></div>
    <div class="col-sm"></div>

</div>